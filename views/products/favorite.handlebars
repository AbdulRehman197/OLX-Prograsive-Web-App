<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>

<div class="container">
  <!-- Control the column width, and how they should appear on different devices -->
  <h1>Favorite</h1>
  {{#each product}}
  <div class="row">
    {{#each this}}
    <div class="col-sm-6 col-md-4">
      <style>
        .card {
          margin-top: 30px;
        }

        .card-body a {
          color: black;
          margin-left: 7px
        }

        .heart {
          border: none;
          margin: 10x;
          width: 70px;
          height: 70px;
          position: absolute;
          transform: translate(-50%, -50%);
          background: url(http://imagizer.imageshack.com/img923/4545/XdJDuY.png) no-repeat;
          cursor: pointer;
        }

        .heart-blast {
          background-position: -2800px 0;
        }
      </style>
      <div class="card">
        <div class="card-body">
          {{!-- <a href="/catagery" style="text-decoration:none; color:black" role="button"> --}}
            <div class="thumbnail">
              <img src={{this.photo}} width="100%" height="150px" class="rounded mx-auto d-block" alt="Generic placeholder thumbnail">
            </div>
            <div class="caption">
              <h3 class="text-center">{{this.adtitle}}</h3>
              <p class="text-center">{{this.catagery}}</p>
              {{!-- <span style="color:orangered" class="text-center">
                <b> Rs:{{this.price}}</b>
              </span> --}}
               <form style="display:inline" action="/api/catagery/favorite/remove/{{this.id}}" method="POST">
                <span style="color:orangered;" class="text-center">
                  <b> Rs:{{this.price}}</b>
                  <button class="heart"></button>
                </span>
              </form>
              <a style="float:right " href="/catagery/{{this.id}}">
                <i class="fas fa-info-circle fa-lg"></i>
              </a>
          {{!-- </a> --}}
          {{!-- <a href="/catagery/favorite/{{this.id}}>"<i class="fas fa-bookmark"></i></a>
          <i class="far fa-bookmark"></i>           --}}
          {{#if user}} {{{editFunction this.user.id ../../this.user.id this.id}}} {{/if}} &nbsp
         <form action="/catagery/{{this.id}}?_method=DELETE" method="POST" style="float:right">            
            <input type="hidden" value="DELETE" name="_method"> 
            {{#if user}} {{{deleteFunction this.user.id ../../this.user.id }}} {{/if}}          
          </form>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/each}}
</div>
<script>
  $(function () {

    $(".heart").on("click", function () {
      $(this).toggleClass("heart-blast");
    });
