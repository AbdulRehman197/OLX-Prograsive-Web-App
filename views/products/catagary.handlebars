<div class="container">
  <!-- Control the column width, and how they should appear on different devices -->

  {{#each product}}
  <br>
  <div class="row">
    {{#each this}}
    <div class="col-sm-6 col-md-4">
      <div class="card">
        <div class="card-body">
          <a href="/catagery" style="text-decoration:none; color:black" role="button">
            <div class="thumbnail">
              <img src={{this.photo}} width="90%" height="150px" class="rounded mx-auto d-block" alt="Generic placeholder thumbnail">
            </div>

            <div class="caption">
              <h3 class="text-center">{{this.adtitle}}</h3>
              <p class="text-center">{{this.description}}</p>
              <p class="text-center">{{this.id}}</p>
              <p>
          </a>
          </p>
          <form action="/catagery/{{this.id}}?_method=DELETE" method="POST">
          {{#if user}}
            {{{editFunction this.user.id ../../user.id this.id}}}
            {{/if}}
            <a href="/catagery/{{this.id}}" class="btn btn-info  mb-2">See more...</a>
            <input type="hidden" value="DELETE" name="_method">
            <input type="submit" class="btn btn-danger" value="Delete" style="float:right">
          </form>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/each}}
</div>